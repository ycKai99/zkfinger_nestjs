doctype html
html
    head
        style.
           table{
                border-collapse: collapse;
                width: 1000px;
            }
            th,td{
                text-align: left;
                padding: 8px;
                
            }
            tr:nth-child(even) {
                background-color:#D6EEEE;
            }
            thead { background-color:lightblue; }

    body
        H1(style="text-align:left")  Notification  

        table(border="1") 
            thead 
                tr 
                    th(style="text-align:left") No 
                    th uuid
                    th Time
                    th Type
                    th Message
            each value, index in jadeargument["message"]
                tr 
                    td=index + 1
                    td=jadeargument["message"][index]["uuid"]
                    td=jadeargument["message"][index]["time"]
                    td=jadeargument["message"][index]["type"]
                    td(style="word-break: break-all")=jadeargument["message"][index]["message"]
        br
        
        form(method='get', style='margin-bottom:5px')
            input(type='submit',value='Check1', style='padding: 8px 20px;width: 225px;font-size:14px;border-radius:6px;background: #DCDCDC')
            input(type='hidden',name='fingerprintTemplate', value='submitValueA')
        
        form(method='post', style='margin-bottom:5px')
            input(type='submit', value='Check2', style='padding: 8px 20px;width:225px;font-size:14px;border-radius:6px;background: #DCDCDC')
            input(type='hidden', name='fingerprintTemplate', value='submitValueB')

        
    
